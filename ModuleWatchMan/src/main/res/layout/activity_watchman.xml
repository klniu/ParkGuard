<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:textColor="@color/colorWhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <TextView
                android:id="@+id/main_scan_text"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/my_scanning"
                android:gravity="center"
                android:text="已连接"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />

            <cn.com.watchman.weight.RadarView
                android:id="@+id/main_scan_radar"
                android:layout_width="80dp"
                android:layout_height="80dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="3">

            <TextView
                android:id="@+id/tv_Title_Longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="@string/tv_Title_Longitude"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_Title_Latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_Title_Longitude"
                android:layout_alignStart="@+id/tv_Title_Longitude"
                android:layout_below="@+id/tv_Title_Longitude"
                android:layout_marginTop="10dp"
                android:text="@string/tv_Title_Latitude"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_Title_Altitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_Title_Latitude"
                android:layout_alignStart="@+id/tv_Title_Latitude"
                android:layout_below="@+id/tv_Title_Latitude"
                android:layout_marginTop="10dp"
                android:text="@string/tv_Title_Altitude"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_content_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_Title_Altitude"
                android:layout_alignStart="@+id/tv_Title_Altitude"
                android:layout_below="@+id/tv_Title_Altitude"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_content_Longitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_Title_Longitude"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/tv_Title_Longitude"
                android:layout_toRightOf="@+id/tv_Title_Longitude"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_content_Latitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_Title_Latitude"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/tv_Title_Latitude"
                android:layout_toRightOf="@+id/tv_Title_Latitude"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_content_Accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_Title_Accuracy"
                android:layout_alignBottom="@+id/tv_Title_Accuracy"
                android:layout_toRightOf="@+id/tv_Title_Accuracy"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_content_Altitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_content_Address"
                android:layout_alignLeft="@+id/tv_content_Latitude"
                android:layout_alignStart="@+id/tv_content_Latitude"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_Title_Accuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_content_Address"
                android:layout_toEndOf="@+id/tv_content_Latitude"
                android:layout_toRightOf="@+id/tv_content_Latitude"
                android:text="@string/tv_Title_Accuracy"
                android:textColor="@color/colorWhite" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueTwo">

        <TextView
            android:id="@+id/tv_content_GPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_Title_StatelliteNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_content_GPS"
            android:layout_alignStart="@+id/tv_content_GPS"
            android:layout_below="@+id/tv_content_GPS"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="已发现卫星数量:"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_content_StatelliteNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_Title_StatelliteNum"
            android:layout_alignBottom="@+id/tv_Title_StatelliteNum"
            android:layout_toEndOf="@+id/tv_Title_StatelliteNum"
            android:layout_toRightOf="@+id/tv_Title_StatelliteNum"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_Title_calibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_content_StatelliteNum"
            android:layout_alignBottom="@+id/tv_content_StatelliteNum"
            android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp"
            android:layout_toEndOf="@+id/tv_content_StatelliteNum"
            android:layout_toRightOf="@+id/tv_content_StatelliteNum"
            android:text="已  校  准:"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/tv_content_calibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_Title_calibration"
            android:layout_alignBottom="@+id/tv_Title_calibration"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/tv_Title_calibration"
            android:layout_toRightOf="@+id/tv_Title_calibration"
            android:textColor="@color/colorWhite" />


        <TextView
            android:id="@+id/new_main_ciShu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_content_GPS"
            android:layout_alignBottom="@+id/tv_content_GPS"
            android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/tv_content_StatelliteNum"
            android:layout_toRightOf="@+id/tv_content_StatelliteNum"
            android:text="上传次数:"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/new_main_sendCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/new_main_ciShu"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            android:background="@drawable/activity_main_menu">

            <ImageButton
                android:id="@+id/imgBtn_EventReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/activity_main_top" />

            <ImageButton
                android:id="@+id/imgBtn_Geography_Positioin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imgBtn_EventReport"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/activity_main_right" />

            <ImageButton
                android:id="@+id/imgBtn_QECode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgBtn_Geography_Positioin"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/activity_main_left" />

            <ImageButton
                android:id="@+id/imgBtn_Statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="37dp"
                android:background="@drawable/activity_main_bottom" />

            <TextView
                android:id="@+id/tv_EventReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBtn_EventReport"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="事件上报"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_QECode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imgBtn_QECode"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="二维码巡更"
                android:textColor="@color/colorWhite" />

            <TextView
                android:id="@+id/tv_Geography_Positioin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/imgBtn_Geography_Positioin"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="地理位置"
                android:textColor="@color/colorWhite" />


            <TextView
                android:id="@+id/tv_Statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_EventReport"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/tv_EventReport"
                android:layout_marginBottom="14dp"
                android:text="巡更统计"
                android:textColor="@color/colorWhite" />


            <ImageButton
                android:id="@+id/rl_startOrstop_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:background="@drawable/activity_main_start" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>